generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
  firstName   String?
  lastName    String?
  email       String?
  accountOwner Boolean  @default(false)
  locale      String?
  collaborator Boolean? @default(false)
  emailVerified Boolean? @default(false)
}

model Settings {
  id            String @id @default(cuid())
  shop          String @unique
  openrouterKey String?
  webhookUrl    String? @default("https://n8n.srv920226.hstgr.cloud/webhook/gemini-image-gen")
  isActive      Boolean @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model TryOnStats {
  id          String   @id @default(cuid())
  shop        String
  productId   String
  variantId   String?
  status      String   // 'success', 'error', 'processing'
  errorReason String?
  userImage   String?  // base64 or URL
  resultImage String?  // URL to generated image
  processingTime Int?  // in milliseconds
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([shop])
  @@index([productId])
  @@index([createdAt])
}